generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model node {
  nodeID    String @id
  xcoord    Int
  ycoord    Int
  floor     String
  building  String
  nodeType  String
  longName  String
  shortName String
  edges     String
}

model edge {
  edgeID      String @id
  startNodeID String
  endNodeID   String
}

model path {
  uniqueID    Int    @id @default(autoincrement())
  startNodeID String
  endNodeID   String
  nodes       String
}

model flower {
  id          Int      @id @default(autoincrement())
  patientName String
  roomNumber  Int
  senderName  String
  cardMessage String
  flowerType  String
  status      String
  priority    String
  date        DateTime @default(now())
}

model gift {
  id               Int    @id @default(autoincrement())
  recipientName    String
  deliveryLocation String
  message          String
  giftSize         String
  priority         String
  wrapping         String
}

model interpreter {
  id             Int    @id @default(autoincrement())
  clientName     String
  language       String
  duration       String
  location       String
  additionalInfo String
}

model security {
  id               Int     @id @default(autoincrement())
  employeeName     String
  employeeID       Int
  reqPriority      String
  location         String
  requestType      String
  reqStatus        String
  alertAuthorities Boolean
}

model medicine {
  id               Int      @id @default(autoincrement())
  patientName      String
  roomNumber       Int
  patientCondition String
  drugName         String
  drugQuantity     String
  status           String
  priority         String
  date             DateTime @default(now())
}

model sanitation {
  id             Int    @id @default(autoincrement())
  patientName    String
  location       String
  serviceType    String
  status         String
  priority       String
  additionalInfo String
}

model roomschedule {
  id           Int    @id @default(autoincrement())
  employeeName String
  priority     String
  location     String
  serviceType  String
  status       String
  startTime    String
  endTime      String
}
