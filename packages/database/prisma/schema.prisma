generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model node {
  nodeID    String @id
  xcoord    Int
  ycoord    Int
  floor     String
  building  String
  nodeType  String
  longName  String
  shortName String
  edges     String
}

model edge {
  edgeID      String @id
  startNodeID String
  endNodeID   String
}

model path {
  uniqueID    Int    @id @default(autoincrement())
  startNodeID String
  endNodeID   String
  nodes       String
}

model flower {
  id          Int      @id @default(autoincrement())
  patientName String
  roomNumber  Int
  senderName  String
  cardMessage String
  flowerType  String
  date        DateTime @default(now())
}

model medicine {
  id               Int      @id @default(autoincrement())
  patientName      String
  roomNumber       Int
  patientCondition String
  drugName         String
  drugQuantity     String
  status           String
  priority         String
  date             DateTime @default(now())
}

model security {
  id               Int     @id @default(autoincrement())
  employeeName     String
  employeeID       Int
  reqPriority      String
  location         String
  requestType      String
  reqStatus        String
  alertAuthorities Boolean
}
